{
  "version": 4,
  "configurePresets": [
    {
      "name": "windows-vs2022",
      "displayName": "Windows - Visual Studio 2022 (x64)",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "architecture": {
        "value": "x64"
      }
    },
    {
      "name": "windows-default",
      "displayName": "Windows - Default Generator",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-default",
      "displayName": "Linux/WSL - Default Generator",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-vs2022-release",
      "displayName": "Build (Windows VS2022 Release)",
      "configurePreset": "windows-vs2022",
      "configuration": "Release"
    },
    {
      "name": "windows-default",
      "displayName": "Build (Windows Default)",
      "configurePreset": "windows-default"
    },
    {
      "name": "linux-default",
      "displayName": "Build (Linux/WSL Default)",
      "configurePreset": "linux-default"
    }
  ]
